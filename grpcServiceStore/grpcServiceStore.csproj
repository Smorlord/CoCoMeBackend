<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Protos\productScannedDTO.proto" />
    <None Remove="Protos\saleStoreDTO.proto" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.42.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\grpcClientStore\grpcClientStore.csproj" />
    <ProjectReference Include="..\services\services.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos\productScannedDTO.proto" GrpcServices="Server" />
    <Protobuf Include="Protos\saleStoreDTO.proto" GrpcServices="Server" />
  </ItemGroup>

</Project>
